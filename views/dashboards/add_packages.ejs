<!-- header -->
<%- include("../partials/header_admin") %>
<%- include("../partials/sidebar") %>

<!-- Main Content -->
<div class="main-content">
    <%- include("../partials/alerts") %>
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <form action="<%= edit ? '/update/package' : '/add/package' %>" method="POST"
                        class="needs-validation" novalidate="">
                        <div class="card">
                            <div class="card-header">
                                <h4><%= edit ? 'Update Package' : 'Add Package' %></h4>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="name">Package Name</label>
                                    <input id="name" type="text" class="form-control" name="name" tabindex="1"
                                        value="<%= edit ? package.name : '' %>" required autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in package name
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="name">Package Description</label>
                                    <input id="description" type="text" class="form-control" name="description" tabindex="1"
                                        value="<%= edit ? package.description : '' %>" required autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in package description
                                    </div>
                                </div>
                                <% if(edit) { %>
                                    <input type="hidden" name="id" value="<%=package.id %>">
                                <% } %>
                                <div class="form-group">
                                    <label for="min_investment">Min Investment</label>
                                    <input id="min_investment" type="text" class="form-control" name="min_investment"
                                        tabindex="1" value="<%= edit ? package.min_investment : '' %>" required
                                        autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in min investment
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="max_investment">Max Investment</label>
                                    <input id="max_investment" type="text" class="form-control" name="max_investment"
                                        tabindex="1" value="<%= edit ? package.max_investment : '' %>" required
                                        autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in max investment
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="interest">Interest</label>
                                    <input id="interest" type="text" class="form-control" name="interest" tabindex="1"
                                        value="<%= edit ? package.interest : '' %>" required autofocus>
                                    <div class="invalid-feedback">
                                        Please enter package interest
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="duration">Duration(Days)</label>
                                    <input id="duration" type="text" class="form-control" name="duration" tabindex="1"
                                        value="<%= edit ? package.duration : '' %>" required autofocus>
                                    <div class="invalid-feedback">
                                        Please enter package duration
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button class="btn btn-primary mr-1"
                                    type="submit"><%= edit ? 'Update' : 'Add' %></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<%- include("../partials/footer") %>